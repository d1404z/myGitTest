/* 注册步骤样式 */
.reg-wrapper{ padding-bottom: 50px; }
.reg-top{ padding-bottom: 26px; border-bottom: 1px solid #dedede; }
.reg-step-nav { width: 924px; height: 126px; margin: 0 auto; }
.reg-step-nav li{ float: left; width: 126px; height: 126px; margin: 0 25px; background:url(../../images/sp_reg.png) no-repeat; }
.reg-step-nav li p{ text-align: center; padding-top: 80px; color:#fff; }
.reg-step-nav .step-a{ background-position: 0px -252px; }
.reg-step-nav .step-b{ background-position: 0px -378px; }
.reg-step-nav .step-c{ background-position: 0 0; }
.reg-step-nav .step-d{ background-position:0px -126px; }
.reg-step-nav .current{ -webkit-animation: 8.5s linear 0s normal none infinite currentStep; animation: 8.5s linear 0s normal none infinite currentStep; -moz-animation: 8.5s linear 0s normal none infinite currentStep; -o-animation: 8.5s linear 0s normal none infinite currentStep; }
.reg-step-nav .current p{ color: #666\9; }
.reg-inner-bd{ width: 772px; margin:50px auto 30px; }
.reg-alert-box{padding-bottom: 0;padding-top: 50px;}

/* 蓝桥支付 */
.form-bd{ padding-bottom: 0px}
.company-bg{ background-color: #2666a6;text-align: center;color: #fff;height: 40px;line-height: 40px;}
.form-bd .form-tab .form-tab-bd{ padding: 68px 0 20px 96px; }
.form-tab-bd .form-action{ margin-left: 206px; padding: 10px 0}
.form-tab-bd .form-action .glb-btn{ width: 234px}
.item-group-re1{ margin-bottom: 0px;}
.form-tab{ width: 780px;}
.group-hd-rea{ margin-bottom: 20px}
.group-hd-rea p{ padding-left: 230px}
.group-hd-rea p span{ padding-left: 8px;color: #959595}
.group-hd-rea ul{ padding-left: 245px;}
.group-hd-rea ul li{ padding-top: 3px;list-style: disc}
.reg-sendEmail{ margin-bottom: 10px}
.reg-sendEmail p{ padding-bottom: 10px;font-size: 16px;}
.reg-sendEmail p span{ padding-left: 15px;font-weight: bold}
.reg-sendEmailBtn a{ width: 220px}
.reg-entity{ width: 500px}
.reg-radio-groups{ width: 400px; }
.reg-radio-groups li{ float: left; width: 100px; margin-right: 30px; }
.group-hd > span{font-size: 12px;}
.form-reg-radio{ float: left}
.form-reg-radio  span{ padding-left: 5px;margin-right: 10px}
.form-bd .sel-reg{ width: 141px; }
.reg-text{ min-height: 35px}
.reg-textarea{ min-height: 50px}
.reg-check input[type="checkbox"]{ margin-left: 20px}
.reg-check span{ margin-left: 5px}
.reg-table{  width: 300px;margin: 0 auto;}
.reg-table table tr{ height: 35px; line-height: 35px}
.reg-table table th{ color: #bbb;font-weight: normal; text-align: right;padding-right: 20px}
.reg-table-btn{ height: 36px; width: 300px;margin-left: 70px;}
.reg-table-btn .glb-btn{ float: left; width: 100px; }
.reg-table-btn .reset-btn{ float: left; margin: 0 30px; font-size: 12px; line-height: 38px; *line-height: 42px; }
.reg-setPassword > h3{ color: #4194C1;}
.form-bd .sel-reg-setPassword{ width: 288px; }
.reg-accountName{ margin-bottom: 10px;text-align: center}
.reg-accountName p{ padding-bottom: 10px;font-size: 16px;}
.reg-accountName p span{ padding-left: 15px;font-weight: bold}




/* 当前步骤动画 */
@keyframes currentStep {
    from{ transform: rotate(0deg); }
	  to{ transform: rotate(360deg); }
}

@-webkit-keyframes currentStep {
    from{ -webkit-transform: rotate(0deg); }
	  to{ -webkit-transform: rotate(360deg); }
}

@-ms-keyframes currentStep {
    from{ -ms-transform: rotate(0deg); }
	  to{ -ms-transform: rotate(360deg); }
}

@-moz-keyframes currentStep {
    from{ -moz-transform: rotate(0deg); }
	  to{ -moz-transform: rotate(360deg); }
}

@-o-keyframes currentStep {
    from{ -o-transform: rotate(0deg); }
	  to{ -o-transform: rotate(360deg); }
}
